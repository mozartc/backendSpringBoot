<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aliyun.mapper.UserMapper">
    <insert id="insertUser" parameterType="com.aliyun.bean.UserBean">
        insert into tbl_user_password(username,password) values(#{username},#{password})
    </insert>
    <select id="selectUser" resultType="com.aliyun.bean.UserBean" parameterType="com.aliyun.bean.UserBean">
        select username, password from tbl_user_password where username=#{username}
    </select>
    <update id="updateUser" parameterType="com.aliyun.bean.UserBean">
        update tbl_user_password set password = #{password} where username=#{username}
    </update>
    <delete id="deleteUser" parameterType="com.aliyun.bean.UserBean">
        delete from tbl_user_password where username=#{username}
    </delete>
</mapper>